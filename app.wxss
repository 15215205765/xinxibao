@import './common/main.wxss';
.shopIcon {
	display: inline-block;
	height: 28rpx;
	width: 28rpx;
	background-size: cover !important;
}

.shopIcon image {
	height: 100%;
	width: 100%;
}
/*  商品列表 */

.shopList {
	padding: 0 20rpx;
	display: flex;
	padding-bottom: 20rpx;
	justify-content: space-between;
	flex-wrap: wrap;
	background: #F8F8F8
}

.shopList .shopList-item {
	background: #fff;
	margin-top: 20rpx;
	width: 340rpx;
	border-radius: 12rpx 12rpx 0rpx 0rpx;
	overflow: hidden;
	position: relative;
}

.shopList-item .tag {
	width: 148rpx;
	position: absolute;
	top: 12rpx;
	right: 12rpx;
	opacity: 0.6;
	border-radius: 24rpx;
	height: 48rpx;
	text-align: center;
	font-size: 24rpx;
	font-weight: 400;
	line-height: 48rpx;
	color: rgba(253, 52, 52, 1);
	background: rgba(255, 255, 255, 0.8);
	border: 1rpx solid rgba(253, 52, 52, 1);
}

.shopList-item .shop-discount-price {
	display: flex;
	padding: 20rpx 12rpx;
	justify-content: space-between;
	font-size: 16rpx;
}

.shop-discount-price p {
	font-size: 16rpx;
}

.shop-discount-price p:last-child {
	color: #eb1818;
}

.shopVideo {
	height: 340rpx;
	position: relative;
}

.shopVideo image {
	width: 100%;
	height: 100%;
}

.shopVideo .video {
	height: 80rpx;
	position: absolute;
	top: 50%;
	/*偏移*/
	left: 50%;
	transform: translate(-50%, -50%);
	width: 80rpx;
	/* background: url("../images/shipin@2x.png") no-repeat 0 0; */
	background-size: 80rpx;
}
.shopItem-title {
	line-height: 34rpx;
	padding: 0px 12rpx;
	width: 100%;
	margin-top: 20rpx;
	display: flex;
	font-size: 28rpx;
	color: #333;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
	box-sizing: border-box;
}

.shopItem-coupon {
	padding: 0 12rpx;
	font-size: 24rpx;
	color: #eb1818;
	margin-top: 16rpx;
	font-weight: 400;
	display: flex;
	align-items: center;
}

.shopItem-coupon view {
	display: block;
	position: relative;
	color: #fff;
	margin-left: 10rpx;
	font-size: 16rpx;
	width: 80rpx;
	height: 28rpx;
	font-weight: 400;
	line-height: 28rpx;
	text-align: center;
}

.shopItem-coupon view image {
	position: absolute;
	width: 100%;
	height: 100%;
	top: 0;
	left: 10rpx;
	z-index: 1;
}

.shopItem-coupon view .coupon-price {
	z-index: 2;
}

.shop-price {
	display: flex;
	justify-content: space-between;
	padding: 0 12rpx;
	margin-top: 14rpx;
	font-size: 16rpx;
	color: #333;
	padding-top: 10rpx;
	border-top: 1rpx dashed #dcdcdc;
}

.shop-price p {
	display: flex;
}

.shop-price div {
	display: flex;
}

.shop-price div p {
	color: #aeaeae;
}

.shop-price div span {
	color: #999;
}

