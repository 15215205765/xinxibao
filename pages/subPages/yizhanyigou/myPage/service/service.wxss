.page {
	padding-top: 88rpx;
	height: 100%;
	background: #fff;
}

page {
	height: 100%;
}
.customer-service{
	height: 100%;
	background: #fff;
	
}
.swiper-tab {
	display: flex;
	flex-direction: row;
	line-height: 88rpx;
	border-top: 1px solid #eee;
	box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
	/* border-bottom: 2rpx solid #777; */
	position: fixed;
	z-index: 999;
	background: #fff;
	top: 0;	
	width: 100%;
}

.tab-item {
	width: 50%;
	text-align: center;
	font-size: 28rpx;
	position: relative;
	color: #333;
}

.swiper {
	/* height: 1100px; */
	/* background: #dfdfdf; */
	height: 100%;
}

.on::after {
	display: block;
	content: '';
	position: absolute;
	bottom: 0;
	width: 20%;
	height: 8rpx;
	background: rgba(253, 52, 52, 1);
	border-radius: 8rpx;
	left: 50%;
	transform: translateX(-50%);
}

.on {
	font-weight: bold;
}

.picture{
	width: 100%;
	height: 448rpx;
}

.contact-information {
  margin-top: 100rpx;
  display: flex;
  justify-content: center;
}

.item:first-child {
  margin-right: 130rpx;
  position: relative;
}
.item button{
	position: absolute;
	width: 100%;
	height: 100%;
opacity: 0;
top: 0;
left: 0;
}
.item image {
  height: 112rpx;
  width: 112rpx;
}

.item view {
  font-size: 28rpx;
  color: #333;
  margin-top: 10rpx;
}
.bottom-picture{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 227rpx;
}
.question-list{
	background: #fff;
	padding-left: 20rpx;
}
.question-list .item{
	height: 88rpx;
	font-size: 28rpx;
	color: #333;
	width: 100%;
	border-bottom: 1px solid #F8F8F8;
	line-height: 88rpx;
}
