	font-size: 20rpx;
	color: #999;
	margin-left: 10rpx;
}
.item-bottom{
	padding-top: 24rpx;
}
.item-bottom .title{
	font-size: 28rpx;
	color: #999;
}
.item-bottom .state{
	font-size: 28rpx;
