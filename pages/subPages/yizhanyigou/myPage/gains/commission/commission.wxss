}
.item{
display: flex;
align-items: center;
justify-content: space-between;
}
.item-top{
	border-bottom: 1px solid #efefef;
	padding-bottom: 24rpx;
}
.item-top .title{
	font-size: 28rpx;
	color: #333;
	display: flex;
	align-items: center;
}
