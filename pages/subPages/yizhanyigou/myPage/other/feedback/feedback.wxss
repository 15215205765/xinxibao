.contactPhone{
	padding: 0 40rpx;
	background: #fff;
	margin-top: 20rpx;
	font-size: 28rpx;
	display: flex;
	align-items: center;
	height: 88rpx;
}
.contactPhone input{
	height: 100%;
	margin-left: 26rpx;
}
textarea{
	border-top: 1px solid #ECECEC;
	width: 100%;
	font-size: 28rpx;
	background: #fff;
	line-height: 40rpx;
	padding: 20rpx 40rpx;
	box-sizing: border-box;
}
.active{
  /* background: #FD3434 !important; */
}
.type{
	padding: 44rpx 20rpx;
	padding-bottom: 0;
}
.type h2{
	font-size:32rpx;
	line-height:44rpx;
	color:rgba(51,51,51,1);
}
.type .list{
	width: 100%;
	margin-top: 40rpx;
	display: flex;
	flex-wrap: wrap;

	/* justify-content: space-around; */
}
.type .list .item{
	width: 200rpx;
	height: 48rpx;
	font-size:28rpx;
	line-height:44rpx;
	color:rgba(51,51,51,1);
	text-align: center;
	background: #FEF3EF;
	border-radius: 24rpx;
	margin-right: 50rpx;
	margin-bottom: 30rpx;
}
.type .list .active{
	background: linear-gradient(to right,#FD6534,#FD3D34);
	color: #fff;
}
.type .list .item:nth-child(3n){
	margin-right: 0;
}
.form{
	padding: 0 20rpx;
}
viewarea{
	display: block;
	width: 100%;
	height: 360rpx;
	font-size:28px;
	line-height:44px;
	background: #fff;
	color:rgba(170,170,170,1);
}
.content{
	position: relative;
}
.content .tips{
	display: inline;
	position: absolute;
	bottom: 10rpx;
	right: 18rpx;
	font-size:24rpx;
	color:rgba(51,51,51,1);
}