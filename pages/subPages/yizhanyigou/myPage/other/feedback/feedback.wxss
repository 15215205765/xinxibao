	page{
		height: 100%;
	}
.page{
	height: 100%;
	background: #F8F8F8;
}
.submit{
	width:600rpx;
background:#FF9800;
border-radius:4rpx;
font-size: 36rpx;
color: #fff;
text-align: center;
line-height: 80rpx;
height:80rpx;
margin: 0 auto;
margin-top: 74rpx;
}
.upPicture{
	margin-top: 40rpx;
}
.upPicture h2{
	display: block;
	font-size:32rpx;
	font-weight:400;
	line-height:44rpx;
	color:rgba(51,51,51,1);
	margin-bottom: 30rpx;
}
.list-img{
	display: flex;
}
.list-img .item{
	height: 240rpx;
	width: 220rpx;
	margin-right: 26rpx;
	
}
.list-img .item:last-child{
	margin-right: 0;
}
.list-img .item image{
	width: 100%;
	height: 100%;
}
.choose{
	margin-right: 26rpx;
	height: 240rpx;
	width: 220rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	border: 1px solid #BEBEBE;
	background: #fff;
	border-radius: 6rpx;
}

.choose image{
	width: 63rpx;
	height: 56rpx;
}
