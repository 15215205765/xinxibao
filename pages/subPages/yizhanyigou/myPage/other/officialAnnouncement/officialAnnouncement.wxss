.list{
  padding: 0 20rpx;
}
.list .list-item{
  padding-top: 44rpx;
}
.list-item-content{
	background: #fff;
	padding-left: 20rpx;
	margin-top: 20rpx;
}
.list-item-title{
	font-size: 28rpx;
	padding: 22rpx 0;
	color: #333;
}
.list .list-item .list-item-time{
  font-size: 24rpx;
  text-align: center;
  color: #999;
}
.list .list-item .list-item-see{
	margin-top: 10px;
	border-top: 1px solid #DCDCDC;
	display: flex;
	justify-content: space-between;
	padding:20rpx 0;
	align-items: center;
	font-size: 24rpx;
color: #333;
padding-right: 20rpx;
}
	
.list image{
	width: 11rpx;
	height: 20rpx;
}
.message{

width: 100%;
background: #F8F8F8;
}
page{
  height: 100%;
  width: 100%;
background: #F8F8F8;
}
.empty{
  display: flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  height: 100%;
background: #F8F8F8;
padding-top: 240rpx;
}
.empty image{
  width: 426rpx;
  height: 291rpx;
}
.empty text{
  font-size: 28rpx;
  color: #333;
  margin-top: 16rpx;
}
.text{
	font-size: 24rpx;
	color: #999;
	width:100%;
   display: -webkit-box;
overflow: hidden;
text-overflow: ellipsis;
word-wrap: break-word;
white-space: normal !important;
-webkit-line-clamp: 2;
-webkit-box-orient: vertical;
padding:0 20rpx;
}