.page {
	height: 100%;
}

page {
	height: 100%;
	background: #F8F8F8;
}

.swiper-tab {
	display: flex;
	flex-direction: row;
	line-height: 88rpx;
	border-top: 1px solid #eee;
	box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
	/* border-bottom: 2rpx solid #777; */
	z-index: 999;
	background: #fff;
	width: 100%;
}

.tab-item {
	width: 25%;
	text-align: center;
	font-size: 28rpx;
	position: relative;
	display: flex;
	justify-content: center;
	align-items: center;
	color: #333;
}
.tab-item .badge{
	font-size: 20rpx;
	color: #fff;
	height: 30rpx;
	width: 30rpx;
	border-radius:50%;
background: #FD4634;
margin-bottom: 14rpx;
margin-left: -10rpx;
display: flex;
align-items: center;
justify-content: center;
}
.swiper {
	/* height: 1100px; */
	/* background: #dfdfdf; */
	height: 100%;
}

.on::after {
	display: block;
	content: '';
	position: absolute;
	bottom: 0;
	width: 30%;
	height: 8rpx;
	background: rgba(253, 52, 52, 1);
	border-radius: 8rpx;
	left: 50%;
	transform: translateX(-50%);
}

.on {
	font-weight: bold;
}

.empty {
	padding-top: 200rpx;
	display: flex;
	flex-flow: column;
	align-items: center;
	justify-content: center;

}

.empty image {
	width: 426rpx;
	height: 255rpx;
}

.empty text {
	margin-top: 30rpx;
	font-size: 28rpx;
	color: #666;
}

/* 订单列表 */
.list {
	padding: 0 20rpx;

}

.item {
	padding: 20rpx 0;
	padding-left: 20rpx;
	background: #fff;
	margin-top: 20rpx;
}

.item .item-top {
	display: flex;
	padding-right: 20rpx;
	justify-content: space-between;
	padding-bottom: 30rpx;
	border-bottom: 1px solid rgba(220, 220, 220, 1);
}

.item .item-top .left{
	display: flex;
	align-items: center;
}
.item .item-top .left .info{
	margin-left: 40rpx;
}
.item .item-top .left .info .h2{
	font-size:28rpx;
	color:rgba(51,51,51,1);
}
.item .item-top .left  text{
	font-size:28rpx;
	color:rgba(170,170,170,1);
}
.item .item-top .left image{
	width: 74rpx;
	height: 74rpx;
}

.item .item-top .item-state {
	font-size: 24rpx;
	color: #FF9800;
	padding: 0rpx 14rpx;
	height: 40rpx;
	line-height: 40rpx;
	/* border:1px solid #FF9800; */
