.header {
	width: 100%;
	height: 198rpx;
	z-index: 9999;
	text-align: center;
	padding-top: 24rpx;
}

.header .header-bg {
	width: 100%;
	height: 100%;
	position: absolute;
	top: 0;
	left: 0;
	z-index: -1;
}

.header-remove {
	position: absolute;
	top: 32rpx;
	right: 36rpx;
	height: 27rpx;
	width: 27rpx;
	z-index: 30;
}

.header text {
	font-size: 32rpx;
	color: #fff;
}

.header .money {
	font-size: 66rpx;
	display: flex;
	align-items: flex-end;
	justify-content: center;
	color: #fff;
	margin-top: 30rpx;
	font-weight: bold;
}

.header .money view {
	font-size: 28rpx;
	margin-bottom: 10rpx;
	margin-left: 5rpx;
	font-weight: normal;
}

.header-box {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
  z-index: 9999;
}
.input{
display: flex;
