page{
	background: #f8f8f8;
	padding-top: 20rpx;
}

.bottom-bg{
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 231rpx;
}
.item{
	padding: 0 20rpx;
	background: #fff;
}
.item .top{
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 28rpx 0;
	border-bottom:1px solid rgba(220,220,220,1);
}
.item .top .right{
	width:126rpx;
height:52rpx;
background:rgba(213,213,213,1);
border-radius:26rpx;
font-size: 24rpx;
color: #fff;
display: flex;
align-items: center;
justify-content: center;
}
.item .top .left .title{
	font-size: 24rpx;
	color: #999;
}
.item .top .left .money{
	font-size: 28rpx;
	color: #FD3434;
margin-top: 20rpx;
}
.item .bottom{
	display: flex;
	justify-content: space-between;
	align-items: center;
	font-size: 24rpx;
	color: #999;
	padding: 24rpx 0;
}
.item .bottom .right{
	display: flex;
	align-items: center;
}
.item .bottom .right image{
	width: 11rpx;
	height: 20rpx;
	margin-left: 20rpx;
}
.item{
	margin-bottom: 20rpx;
}
.active{
	background: #FD3434 !important;
	color: #fff !important;
}